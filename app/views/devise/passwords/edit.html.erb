<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mt-5">
        <div class="card-header">
          <h2 class="mb-0">Changer mon mot de passe</h2>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>

            <div class="mb-3">
              <%= f.label :password, "Nouveau mot de passe", class: "form-label" %>
              <% if @minimum_password_length %>
                <small class="form-text text-muted">(<%= @minimum_password_length %> caract√®res minimum)</small>
              <% end %>
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :password_confirmation, "Confirmation du nouveau mot de passe", class: "form-label" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="d-grid gap-2">
              <%= f.submit "Changer mon mot de passe", class: "btn btn-primary" %>
            </div>
          <% end %>
          
          <div class="mt-3">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
