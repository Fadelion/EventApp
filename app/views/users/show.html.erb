<div class="container">
  <div class="row">
    <div class="col-md-4">
      <div class="card mb-4">
        <div class="card-body">
          <h2 class="card-title"><%= @user.first_name %> <%= @user.last_name %></h2>
          <p class="card-text">
            <strong>Email:</strong> <%= @user.email %>
          </p>
          <% if @user.description.present? %>
            <p class="card-text">
              <strong>Description:</strong> <%= @user.description %>
            </p>
          <% else %>
            <p class="card-text text-muted">
              Aucune description disponible
            </p>
          <% end %>
          <div class="mt-3">
            <%= link_to "Modifier mon mot de passe", edit_user_registration_path, class: "btn btn-outline-primary btn-sm" %>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-md-8">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h3 class="mb-0">Mes événements</h3>
          <%= link_to "Créer un événement", new_event_path, class: "btn btn-primary btn-sm" %>
        </div>
        <div class="card-body">
          <% if @events.any? %>
            <div class="list-group">
              <% @events.each do |event| %>
                <%= link_to event_path(event), class: "list-group-item list-group-item-action" do %>
                  <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1"><%= event.title %></h5>
                    <small><%= event.start_date.strftime("%d/%m/%Y") %></small>
                  </div>
                  <p class="mb-1"><%= event.description.truncate(100) %></p>
                  <small><i class="bi bi-geo-alt"></i> <%= event.location %></small>
                <% end %>
              <% end %>
            </div>
          <% else %>
            <div class="alert alert-info">
              Vous n'avez pas encore créé d'événement.
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
