<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h2 class="mb-0">Créer un nouvel événement</h2>
        </div>
        <div class="card-body">
          <%= form_with(model: @event, local: true) do |f| %>
            <% if @event.errors.any? %>
              <div class="alert alert-danger">
                <h4><%= pluralize(@event.errors.count, "erreur") %> ont empêché la création de cet événement :</h4>
                <ul>
                  <% @event.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= f.label :title, "Titre", class: "form-label" %>
              <%= f.text_field :title, class: "form-control", placeholder: "Titre de l'événement" %>
            </div>

            <div class="mb-3">
              <%= f.label :start_date, "Date de début", class: "form-label" %>
              <%= f.datetime_local_field :start_date, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :duration, "Durée (en minutes)", class: "form-label" %>
              <%= f.number_field :duration, class: "form-control", placeholder: "Durée en minutes (multiple de 5)" %>
              <small class="form-text text-muted">La durée doit être un multiple de 5 minutes</small>
            </div>

            <div class="mb-3">
              <%= f.label :description, "Description", class: "form-label" %>
              <%= f.text_area :description, class: "form-control", rows: 5, placeholder: "Description détaillée de l'événement" %>
            </div>

            <div class="mb-3">
              <%= f.label :price, "Prix (en €)", class: "form-label" %>
              <%= f.number_field :price, class: "form-control", placeholder: "Prix en euros (entre 0 et 1000)" %>
              <small class="form-text text-muted">0 pour un événement gratuit</small>
            </div>

            <div class="mb-3">
              <%= f.label :location, "Lieu", class: "form-label" %>
              <%= f.text_field :location, class: "form-control", placeholder: "Lieu de l'événement" %>
            </div>

            <div class="d-grid gap-2">
              <%= f.submit "Créer l'événement", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>